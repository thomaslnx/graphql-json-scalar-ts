{
  "name": "@thomaslnx/graphql-json-scalar-ts",
  "version": "1.0.0",
  "description": "A GraphQL JSON scalar with excellent TypeScript support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:rename",
    "build:esm": "tsc --project tsconfig.build.json --module ESNext --outDir dist",
    "build:cjs": "tsc --project tsconfig.build.json --module CommonJS --outDir dist-cjs",
    "build:rename": "node scripts/rename-cjs.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "graphql",
    "scalar",
    "json",
    "typescript",
    "apollo"
  ],
  "author": "Marcos de Moura Silva",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomaslnx/graphql-json-scalar-ts.git"
  },
  "sideEffects": false,
  "peerDependencies": {
    "graphql": "^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "graphql": "^16.12.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
